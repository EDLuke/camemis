    $EDIT_RIGHT=UserAuth::getACLValue("STUDENT_SETTING_EDIT_RIGHT")?"false":"true";
}elseif($personType=="STAFF"){
    $EDIT_RIGHT=UserAuth::getACLValue("STAFF_SETTING_EDIT_RIGHT")?"false":"true";
}

