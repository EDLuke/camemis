        var contextMenu = new Ext.menu.Menu({
            items: [{
                text: '<?=SHOW_DETAIL;?>'
                ,iconCls:'icon-application_form_magnify'
                ,handler: function(){
                    window.location = "/dataset/showblob/?blobId=" + record.data.ID;
