            ,disabled: false
            ,handler: function(){
               Ext.getCmp('".$OBJECT_GRID->getObjectId()."').store.reload();
            }
        }]);
    ");
    
    if(UserAuth:: getUserType() != 'STUDENT')
    $OBJECT_GRID->addTBarItems("
        tbar.add([{
            id: 'ATTACHMENT_ID'
            ,text: '".ATTACHMENT."'
            ,iconCls:'icon-application_form_add'
            ,scope:this
            ,disabled: false
            ,handler: function(){
               openWinIFrame('".ATTACHMENT."', '/dataset/addattachment/?objectId=$this->objectId&object=$this->object', 550, percentHeight(85));
