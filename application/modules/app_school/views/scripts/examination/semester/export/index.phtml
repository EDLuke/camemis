            $params["roomId"]= $facette->ROOM_ID;
            $results = StudentExaminationDBAccess::getQueryAssignedStudentExamination($params);
            $academicDate .= ($bnt==3)?"":"\n".ROOM.": ". $roomObject->NAME; // room name    
